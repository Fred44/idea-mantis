<idea-plugin version="2">
    <name>Mantis BT Idea plugin</name>
    <description>Plugin to work with Mantis BT</description>
    <version>0.0.1</version>
    <vendor>Frédéric LEFEBVRE</vendor>
    <idea-version since-build="8000"/>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <component>
            <implementation-class>flefebvre.intellij.plugin.mantisbt.MantisProjectComponent</implementation-class>
        </component>
        <component>
            <implementation-class>flefebvre.intellij.plugin.mantisbt.PluginConfiguration</implementation-class>
        </component>
    </project-components>

    <actions>
        <action id="Mantis.MainToolWindow"
                class="flefebvre.intellij.plugin.mantisbt.action.MainPluginWindowAction"
                text="Show/Hide Mantis Window">
        </action>

        <action id="Mantis.Refresh"
                class="flefebvre.intellij.plugin.mantisbt.action.RefreshAction"
                text="Refresh List"
                icon="/actions/sync.png"/>

        <action id="Mantis.FilterBy"
                class="flefebvre.intellij.plugin.mantisbt.action.FilterByActionGroup"/>
        <action id="Mantis.GroupBy"
                class="flefebvre.intellij.plugin.mantisbt.action.GroupByAction"
                text="Group By"/>
        <action id="Mantis.ExpandIssues"
                class="flefebvre.intellij.plugin.mantisbt.action.ExpandIssuesAction"
                text="Expand All Issues"
                icon="/actions/expandall.png"/>
        <action id="Mantis.CollapseIssues"
                class="flefebvre.intellij.plugin.mantisbt.action.CollapseIssuesAction"
                text="Collapse All Issues"
                icon="/actions/collapseall.png"/>

        <group id="MantisToolBar" popup="false">

            <reference id="Mantis.FilterBy"/>
            <reference id="Mantis.GroupBy"/>
            <!--<reference id="ThePlugin.JiraIssues.GroupSubtasks"/> -->
            <reference id="Mantis.ExpandIssues"/>
            <reference id="Mantis.CollapseIssues"/>
            <separator/>
            <!-- <reference id="ThePlugin.JiraIssues.OpenIssue"/>
           <reference id="ThePlugin.JiraIssues.ViewIssue"/>
           <separator/>
           <reference id="ThePlugin.JiraIssues.CreateIssue"/>
           <reference id="ThePlugin.JiraIssues.QuickSearch"/>-->
            <reference id="Mantis.Refresh"/>
            <!--<separator/>
               <reference id="ThePlugin.ActiveTaskBar.ActivateJiraIssue"/>
               <separator/>
               <reference id="ThePlugin.HelpJIRA"/>
               <separator/>-->
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceInterface="flefebvre.intellij.plugin.mantisbt.MantisSession"
                        serviceImplementation="flefebvre.intellij.plugin.mantisbt.MantisSessionImpl"/>

        <projectService serviceInterface="flefebvre.intellij.plugin.mantisbt.model.IssueListModel"
                        serviceImplementation="flefebvre.intellij.plugin.mantisbt.model.IssueListModelImpl"/>

        <projectService serviceInterface="flefebvre.intellij.plugin.mantisbt.model.IssueListManager"
                        serviceImplementation="flefebvre.intellij.plugin.mantisbt.model.IssueListManagerImpl"/>

        <projectService serviceInterface="flefebvre.intellij.plugin.mantisbt.ui.IssueListPanel"
                        serviceImplementation="flefebvre.intellij.plugin.mantisbt.ui.IssueListPanel"/>

        <projectService serviceInterface="flefebvre.intellij.plugin.mantisbt.MantisConfigurationManager"
                        serviceImplementation="flefebvre.intellij.plugin.mantisbt.MantisConfigurationManager"/>

        <projectService serviceInterface="flefebvre.intellij.plugin.mantisbt.ui.PluginToolWindow"
                        serviceImplementation="flefebvre.intellij.plugin.mantisbt.ui.PluginToolWindow"/>
    </extensions>
</idea-plugin>